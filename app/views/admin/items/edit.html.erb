<h1>商品編集画面</h1>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*", class: "w-100" %>

  <h4>商品名</h4>
  <%= f.text_field :name %>
  
  <h4>説明</h4>
  <%= f.text_area :introduction %>
  
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id,:name,{prompt: "--選択してください--"} %>
  
  <h4>税抜価格</h4>
  <%= f.text_field :price %>円
  
  <h4>販売ステータス</h4>
  <%= f.select :is_active,[["販売中",true],["売り切れ",false]],include_blank: "選択して下さい" %>
  
  
  
  <%= f.submit '変更' %>
  
<% end %>