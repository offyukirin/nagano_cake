<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <div class="col-xs-4">
      <%= image_tag @item.image, size:"100x100" %>
    </div>
    <div class="col-xs-6">

      <div>
        <p><strong class="col-xs-2">商品名</strong><%= @item.name %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-2">商品説明</strong><%= @item.introduction %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-2">ジャンル</strong><%= @item.genre.name %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-4">税込価格(税抜価格)</strong><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円</p>
      </div>
      <br>
      <div>
      <p><strong class="col-xs-3">販売ステータス</strong>
      <% if @item.is_active == true %>
        <%= "販売中" %>
      <% else %>
        <%=  "売り切れ" %>
      <% end %>
      <br>
      </div>
      <div class="text-right">
        <%= link_to "編集する",edit_admin_item_path(@item), class:"btn btn-primary" %>
      </div>
      <td><%= link_to "一覧に戻る", admin_items_path,class:"btn-sm btn-success" %></td>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>
