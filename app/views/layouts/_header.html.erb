<header>
   <div class="container">
    <div class="row">
     <!--ロゴ -->
      <nav class="nav navbar-nav navbar-left">
      <% if admin_signed_in? %>
      <p>
        <i class= "fas fa-birthday-cake"></i>
        <%= link_to "Nagano Cake", admin_items_path  %>
      </p>
      <% else %>
      <p>
        <i class= "fas fa-birthday-cake"></i>
        <%= link_to "Nagano Cake", root_path %>
      </p>
      <% end %>
     </nav>

        <ul class="nav-item nav navbar-nav navbar-right">
          <% if customer_signed_in? %>
           <!--カスタマーがログインしている時　-->
           <li class="customer-name">
            ようこそ、<%= current_customer.first_name %>さん！
           </li>
           <li><%= link_to "マイページ", public_customer_path(current_customer) %></li>
           <li><%= link_to "商品一覧", public_items_path  %></li>
           <li><%= link_to "カート", public_cart_items_path %></li>
           <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
          <% elsif admin_signed_in? %>
           <!--管理者がログインしている時 -->
            <li><%= link_to "商品一覧", admin_items_path %></li>
            <li><%= link_to "会員一覧", admin_customers_path %></li>
            <li><%= link_to "注文履歴一覧", admin_orders_path %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
            
          <% else %>
           <!--ログインしていない時　-->
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "商品一覧", public_items_path %> </li>
            <li><%= link_to "新規登録", new_customer_registration_path %></li>
            <li><%= link_to "ログイン", new_customer_session_path %></li>
          <% end %>
        </ul>
     </nav>
    </div>
  </div>
 </header>